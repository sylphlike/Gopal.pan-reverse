<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="mybatisGenerator" targetRuntime="MyBatis3">

        <property name="javaFileEncoding" value="UTF-8" />

        <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
        <plugin type="com.github.sylphlike.reverse.CustomizeBatisPlugin" />
        <!--xml文件内容去重-->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />



        <commentGenerator type="com.github.sylphlike.reverse.CustomizeGenerator">
            <!-- 是否去除自动生成的注解true:是, false:否 -->
            <property name="suppressAllComments" value="false"/>
            <!--是否添加实体类上的注释，默认 true-->
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>



        <!-- 数据库连接信息 mysql-->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/schema"
                        userId="user"
                        password="password">
            <property name="useInformationSchema" value="true"/>
        </jdbcConnection>



        <javaTypeResolver >

            <!-- 默认为false ，把DECIMAL和 NUMERIC类型解析为 Integer ， 为true时把DECIMAL和 NUMERIC类型解析为java.math.BigDecimal-->
            <property name="forceBigDecimals" value="true" />
            <!-- This property is used to specify whether MyBatis Generator should force the use of JSR-310 data types for DATE, TIME,
                and TIMESTAMP fields, rather than using java.util.Date -->
            <property name="useJSR310Types" value="true"/>
        </javaTypeResolver>

        <!-- 生成PO类 的位置 -->
        <javaModelGenerator targetPackage="com.github.sylphlike.dao.entity" targetProject="src/main/java">
            <!-- enableSubPackages 是否让schema作为包的后缀 -->
            <property name="enableSubPackages" value="false" />
            <!-- 从数据库返回的值清理前后的空格 -->
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- mapper映射文件位置 -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources">
            <property name="enableSubPackages" value="false" />
        </sqlMapGenerator>

        <!-- mapper接口文件位置 -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.github.sylphlike.dao.mapper" targetProject="src/main/java">
            <property name="enableSubPackages" value="false" />
        </javaClientGenerator>


        <!--
            生成对应表的POJO并不要示例
            catalog             表示数据库实例
            tableName="%" 		表示反向生成数据库中的所有表
            <property name="ignoreQualifiersAtRuntime" value="true"/>  默认为false，如果设置为true，在生成的SQL中，table名字不会加上catalog或schema
            <columnOverride>	节点表示 需要重写的列
            <ignoreColumn> 		节点表示需要忽略的列，delimitedColumnName属性表示匹配列名的时候是否区分大小写。 如果为true则区分。默认值为false，不区分大小写。
         -->


        <table catalog="catalog" schema="schema" tableName="tableName" enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false" enableSelectByExample="false" selectByExampleQueryId="false"  >
            <property name="ignoreQualifiersAtRuntime" value="true"/>
            <ignoreColumn column="create_time"/>
        </table>



    </context>
</generatorConfiguration>
